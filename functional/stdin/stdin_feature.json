    {
        "entry": "Create formula STDIN - too short formula name",
        "steps": [
            {
                "key": "",
                "value": "{\"formulaCmd\":\"rit tooShort\", \"lang\":\"shell\", \"workspacePath\":\"/home/victor/ritchie-formulas-local\", \"formulaPath\":\"/demo/create/formula\"}",
                "action": "echo"
            },
            {
                "key": "",
                "value": "create formula --stdin",
                "action": "main"
            }
