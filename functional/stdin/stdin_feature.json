    {
        "entry": "Create formula STDIN - not allowed char",
        "steps": [
            {
                "key": "",
                "value": "{\"formulaCmd\":\"rit @formula< formula\", \"lang\":\"shell\", \"workspacePath\":\"/home/victor/ritchie-formulas-local\", \"formulaPath\":\"/demo/create/formula\"}",
